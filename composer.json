{
  "name": "bayfrontmedia/mail-manager",
  "description": "Framework agnostic library to queue and send emails from multiple services using a consistent API.",
  "homepage": "https://github.com/bayfrontmedia/mail-manager",
  "license" : "MIT",
  "type": "library",
  "keywords": [
    "php",
    "email",
    "mail",
    "pdo"
  ],
  "authors": [
    {
      "name": "John Robinson",
      "email": "john@bayfrontmedia.com",
      "homepage": "https://www.bayfrontmedia.com"
    }
  ],
  "support": {
    "issues": "https://github.com/bayfrontmedia/mail-manager/issues"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "bayfrontmedia/php-array-helpers": "^2.0",
    "bayfrontmedia/php-validator": "^2.0",
    "phpmailer/phpmailer": "^6.7",
    "soundasleep/html2text": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Bayfront\\MailManager\\": "src/"
    }
  }
}